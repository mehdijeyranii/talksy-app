{
    "compilerOptions": {
        "target": "ES2016",
        "jsx": "preserve",
        "module": "CommonJS",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["/node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "client"],
    "files": ["./src/types/express.d.ts"]
}
